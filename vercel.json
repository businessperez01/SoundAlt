{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/css/(.*)",
            "dest": "/client/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/client/js/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
}
