{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/login",
            "dest": "/server.js"
        },
        {
            "src": "/register",
            "dest": "/server.js"
        },
        {
            "src": "/profile",
            "dest": "/server.js"
        },
        {
            "src": "/upload",
            "dest": "/server.js"
        },
        {
            "src": "/css/(.*)",
            "dest": "/client/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/client/js/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}
